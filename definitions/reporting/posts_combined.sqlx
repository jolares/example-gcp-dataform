config {
  type: "table",
  schema: "reporting",
  tags: ["daily"],
  bigquery: {
    partitionBy: "date(created_at)"
  },
  description: "Combine both questions and answers into a single posts_all table",
  assertions: {
    uniqueKey: ["post_id"]
  }
}

SELECT
  post_id,
  created_at,
  type,
  title,
  body,
  owner_user_id,
  parent_id
FROM
  ${ref("test_posts_answers")}

union all

SELECT
  post_id,
  created_at,
  type,
  title,
  body,
  owner_user_id,
  parent_id
FROM
  ${ref("test_posts_questions")}
