config {
  type: "view",
  schema: "staging",
  description: "A cleaned version of stackoverflow.posts_questions"
}

SELECT
  id as post_id,
  creation_date as created_at,
  'question' as type,
  title,
  body,
  owner_user_id,
  parent_id
FROM
  ${ref("posts_questions")}
WHERE
  -- limit to recent data for the purposes of this demo project
  creation_date >= timestamp("2019-01-01")
